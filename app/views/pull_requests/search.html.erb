<div id="form_container" class="col-sm-4 offset-sm-4">
  <h4>Get the pull requests with GitHub Author name and repository name</h4>
  <%= form_tag pull_requests_index_path, :method => "get" do %>
      <div class="form-group row">
        <%= label_tag(:author, "GitHub Author", class: "col-sm-4 col-form-label") %>
        <div>
          <%= text_field_tag :author, params[:author], class: "form-control", required: true %>
        </div>
        <small class="help-text" class="form-text text-muted">This is Github's author name</small>
      </div>
      <div class="form-group row">
        <%= label_tag(:repo, "GitHub Repository", class: "col-sm-4 col-form-label") %>
        <div>
          <%= text_field_tag :repo, params[:repo], class: "form-control", required: true %>
        </div>
        <small class="help-text" class="form-text text-muted">This is Github repository name</small>
      </div>
      <div class="form-group row">
        <div class="col-sm-6">
          <button type="submit" class="btn btn-primary">List Pull Requests</button>
        </div>
      </div>
  <% end %>
</div>
